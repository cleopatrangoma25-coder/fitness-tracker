{
  "name": "@fitness-tracker/functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions with tRPC for Fitness Tracker Pro",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "firebase emulators:start --only functions",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@fitness-tracker/shared": "file:../packages/shared",
    "@trpc/server": "^10.45.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^8.0.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.0.0"
  },
  "private": true
} 